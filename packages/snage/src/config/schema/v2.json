{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/FACT-Finder/snage/tree/master/packages/server/src/config/schema/v2.json",
  "title": "Snage Configuration",
  "definitions": {
    "field": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^((?!summary|content).+)$"
        },
        "type": {
          "type": "string",
          "enum": ["string", "boolean", "date", "number", "semver", "ffversion"]
        },
        "enum": { "type": "array", "items": { "type": "string" } },
        "list": { "type": "boolean" },
        "optional": { "type": "boolean" },
        "provided": { "$ref": "#/definitions/provider" },
        "description": { "type": "string" },
        "alias": { "type": "string" },
        "styles": {
          "type": "array",
          "items": { "$ref": "#/definitions/styleDefinition" }
        }
      },
      "additionalProperties": false,
      "required": ["name", "type"]
    },
    "filterPreset": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "filter": { "type": "string" },
        "sort": { "$ref": "#/definitions/sort" }
      },
      "additionalProperties": false,
      "required": ["name", "filter", "sort"]
    },
    "sort": {
      "type": "object",
      "properties": {
        "field": { "type": "string" },
        "order": { "type": "string", "enum": ["asc", "desc"] }
      },
      "additionalProperties": false,
      "required": ["field", "order"]
    },
    "link": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "link": { "type": "string" }
      },
      "additionalProperties": false,
      "required": ["name", "link"]
    },
    "styleDefinition": {
      "type": "object",
      "properties": {
        "on": { "type": "string" },
        "css": { "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false,
      "required": ["on", "css"]
    },
    "provider": {
      "type": "object",
      "properties": {
        "by": {"type": "string"},
        "arguments": { "type": "object" }
      },
      "additionalItems": false,
      "required": ["by"]
    }
  },
  "type": "object",
  "properties": {
    "version": { "type":  "number" },
    "basedir": { "type": "string" },
    "template": {
      "type":  "object",
      "properties": {
        "file": {"type": "string"},
        "text": {"type": "string"}
      },
      "additionalItems": false,
      "required": ["file"]
    },
    "fields": {
      "type": "array",
      "items": { "$ref": "#/definitions/field" }
    },
    "note": {
      "type": "object",
      "properties": {
        "links": {
          "type": "array",
          "items": { "$ref": "#/definitions/link" }
        },
        "styles": {
          "type": "array",
          "items": { "$ref": "#/definitions/styleDefinition" }
        }
      },
      "additionalProperties": false
    },
    "filterPresets": {
      "type": "array",
      "items": { "$ref": "#/definitions/filterPreset" }
    },
    "standard": {
      "type": "object",
      "properties": {
        "query": { "type": "string" },
        "sort": { "$ref": "#/definitions/sort" }
      },
      "additionalProperties": false,
      "required": ["query", "sort"]
    }
  },
  "additionalProperties": false,
  "required": ["version", "template", "basedir", "standard"]
}
